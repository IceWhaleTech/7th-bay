import requests
import json
import time

# 定义 ESP32-C3 的 IP 地址和端口号
url = "http://172.16.1.1/post"

# 定义要发送的 JSON 数据
data_template ={
      "id":1,
      "speed":4,
      "data":[
          {"h":32,"s":255,"v":255}
      ]
}

 # 发送 POST 请求
response = requests.post(url, json=data_template)
    
# 打印响应结果
print(response.text)